@model IEnumerable<Reservations.Reservation>


@{
    ViewBag.Title = "Bookings Summary";
    
}
<h1 style="color:#ffffff">@ViewBag.Title</h1>
<h3>@ViewBag.Message</h3>

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    <p>
        @Html.ActionLink("Create New", "Create",null, new { Style = "color:#ffffff" })
    </p>
    <table class="table table-bordered ">
        <tr style="font-size:large">
            <th>
                @Html.DisplayNameFor(model => model.firstName)

            </th>
            <th>
                @Html.DisplayNameFor(model => model.lastName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RoomType1.roomType1)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.numberOfGuests)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.numberOfRooms)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.checkin)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.checkout)
            </th>
        </trstyle="font-size:medium">
    
    @foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.firstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.lastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RoomType1.roomType1)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.numberOfGuests)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.numberOfRooms)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.checkin)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.checkout)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id=item.reservationId },new { Style = "color:#ffffff" }) |
                @Html.ActionLink("Details", "Details", new { id=item.reservationId }, new { Style = "color:#ffffff" }) |
                @Html.ActionLink("Delete", "Delete", new { id=item.reservationId }, new { Style = "color:#ffffff" })
            </td>
        </tr>
    }
    
    </table>
</body>
</html>
